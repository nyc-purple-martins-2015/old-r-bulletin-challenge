<h1>New Post</h1>
<div class="row">
    <%= form_for :conversation, url: topic_conversations_path(@topic, @conversation) do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.submit "Create New Post" %>
      </div>
    <% end %>
</div>

