<!DOCTYPE html>
<html>
<head>
  <title>RBulletin</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <% if logged_in? %>
    <%= current_user.username %> <%= link_to 'logout', logout_path %>
  <% else %>
    <%= link_to 'login', login_path %> <%= link_to 'register', register_path %>
  <% end %>
  </header>

<%= yield %>

</body>
</html>
