<!DOCTYPE html>
<html>
<head>
  <title>RBulletin</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if log_in? %>
  <%= current_user.username %>::<%= link_to "Log out", log_out_path %>
    <div class="new-conversation-link">
      <%= link_to "Create Conversation", new_conversation_path %>
    </div>
  <% else %>
  <%= link_to "Sign Up", sign_up_path %>::<%= link_to "Log In", log_in_path %>
  <%end %>


<%= yield %>

</body>
</html>
